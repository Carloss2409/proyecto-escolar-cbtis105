@section Scripts {
    <script src="~/js/periodos.js"></script>
    <script src="~/js/listado-registros.js"></script>
}

<h1>Entrega de PET</h1>

<div class="card"> 
    <div class="card-header">Busqueda</div>
    <div class="card-body">
        <div class="row">
            <div class="col"> 
                <div class="mb-3"> 
                    <label for="periodo">Periodo Semestral </label>
                    <select class="form-control" id="periodo"></select>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-end">
        <a href="~/pet/registro" class="btn btn-secondary">Nuevo</a>
        <button class="btn btn-primary" id="boton-buscar">Buscar</button>
    </div>
</div>


<div class="card mt-4">
    <div class="card-body">
        <div class="row">
            <div class="col-sm-4"> 
                <div class="alert alert-info">
                    <div class="small">Peso total</div>
                    <div class="display-4" id="peso-total"></div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="card mt-4">
    <div class="card-header">Registros por grupo</div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Grupo</th>
                    <th>Peso total</th>
                </tr>
            </thead>
            <tbody id="tabla-grupos"></tbody>
        </table>
    </div>
</div>


<div class="card mt-4">
    <div class="card-header">Registros de PET</div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Periodo</th>
                    <th>Fecha</th>
                    <th>Registrado por</th>
                    <th>Grupo</th>
                    <th>Alumno</th>
                    <th>Peso</th>
                </tr>
            </thead>
            <tbody id="registros"></tbody>
        </table>
    </div>
</div>